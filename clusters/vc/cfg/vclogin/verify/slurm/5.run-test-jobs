#!/bin/bash

## $Header: $
## Source:
## @file vclogin/verify/slurm/5.run-test-jobs

VCLOAD=../../../provision/loader/shload.sh

if [ ! -f "${VCLOAD}" ] ; then
  echo "${0}: missing: ${VCLOAD}"
  exit 99
fi
source ${VCLOAD}

# if we're given an argument, append test output to it
declare -x OUT=${1:-""}

if [ -n "${OUT}" ] ; then
  touch ${OUT} || exit 1
  exec > >(tee -a "${OUT}") 2>&1
fi

users=$(echo $(ls ${USERADD} | grep -v root))
if [ -n "${users}" ] ; then
  printf " %15s	%16s		%s\n"  "user" "partition" "job type"
  printf " %15s	%16s		%s\n"  "----" "---------" "--- ----"
fi
for _u in ${users}
do
  if [ ! -d ${USERADD}/${_u} ] ; then
    continue
  fi
  if [ -f ${USERADD}/${_u}/Template ] ; then
    continue
  fi
  numeric="^[0-9]+$"
  multiple=""
  if [ -d ${USERADD}/${_u}/multiple ] ; then
    multiple=$(echo $(ls ${USERADD}/${_u}/multiple))
  fi
  if [ -z "${multiple}" ] ; then
    multiple=1
  fi
  if ! [[ ${multiple} =~ ${numeric} ]] ; then
    ErrExit ${EX_CONFIG} "user: ${multiple}, non-numeric"
  fi

  for _m in $(seq 1 ${multiple})
  do
    _U=${_u}
    if [ "${multiple}" -gt 1 ] ; then
      _U=${_u}${_m}
    fi
    for _p in $(sinfo -h --format="%R")
    do
      _state=$(scontrol show partition ${_p}  -o | sed 's/^.*State=//' | sed 's/ .*$//')
      if [ ${_state} = DOWN ] ; then
        continue
      fi
      ### XXX better output verification
      printf  " %15s	%16s		sbatch" ${_U} ${_p}
      Rc ErrExit 10 "sbatch --chdir=/tmp --uid=${_U} --time=00:10 --partition=${_p} --quiet --wait --wrap=hostname"
      printf " salloc"
      Rc ErrExit 11 "salloc --chdir=/tmp --uid=${_U} --time=00:10 --partition=${_p} hostname"
      printf '\n' 
    done
    printf '\n'
  done
done

trap '' 0
exit ${EX_OK}
